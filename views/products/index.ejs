<% layout("./layouts/boilerplate") -%>
<body>
  <div class="row row-col-lg-3 row-col-md-2 row-col-sm-1 mt-3">
        <% for( let product of products ){ %> 
      
            <div class="card" style="width: 20rem;">
                <a href="/products/<%= product._id %>" class="product-link">
                <img src="<%=product.image%>" class="card-img-top" alt="product-image" style="height: 20rem;">
                <!-- <div class="card-img"></div> -->
                </a>
                <div class="card-body">
                  <h5 class="card-title"><b><%=product.title%></b></h5>
                  <div class="view-btn">
                      <a class="product-link btn" href="/products/<%= product._id %>">
                        <button class="bg-secondary">
                        View Product
                        </button>
                      </a>
                      <form method="POST" action="/cart/add/<%= product._id %>" class="product-link btn">
                        <button class="bg-secondary">
                        Add to Cart
                        </button>
                      </form>
                  </div>
                </div>  
              </div>

        <% } %>
    </div>
</body>















