<% layout("./layouts/boilerplate") -%>
<body>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
              <th scope="col"></th>
              <th scope="col"></th>
              <th scope="col">Product</th>
              <th scope="col">Price</th>
              <th scope="col">Quantity</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
              <% for(let i = 0; i < cart.items.length; i++) { %>
                <tr>
                    <th scope="row"><%= i + 1 %>.</th>
                    <td><a href="/products/<%=cart.items[0].product._id%>"><img src="<%= cart.items[i].product.image %>" class="card-img-top" alt="product-image" style="height: 3rem; width: 3rem;"></a></td>
                    <td><a href="/products/<%=cart.items[0].product._id%>" style="text-decoration: none; color: black;"><%= cart.items[i].product.title %></a></td>
                    <td><%= cart.items[i].product.price %></td>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;<%= cart.items[i].quantity %></td>
                    <td><form method="POST" , action="/cart/<%= cart._id %>/<%= cart.items[0].product._id%>?_method=DELETE">
                      <button class="btn bg-secondary">Delete</button>
                    </form></td>
                </tr>
                <% } %>
          </tbody>
      </table>
</body>
